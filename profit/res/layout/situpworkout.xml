<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res/com.smartmedsoftdevelopment.profit"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.smartmedsoftdevelopment.profit.ArcProgress
            android:id="@+id/sittimer"

            android:layout_width="120dp"
            android:layout_height="120dp"
            custom:arc_progress="120"
            custom:arc_bottom_text="Time"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal" android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

    </com.smartmedsoftdevelopment.profit.ArcProgress>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="45"
            android:textSize="@dimen/text_size_huge"
            android:visibility="visible"
            android:clickable="true"
            android:background="@drawable/header_redius"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="MyTimer"
            android:soundEffectsEnabled="false"
            android:id="@+id/set" android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_margin="2dp"
            android:background="@drawable/header_oval"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/set0" android:layout_alignParentBottom="true" android:layout_toLeftOf="@+id/set1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"

            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:background="@drawable/header_oval"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/set1" android:layout_alignParentBottom="true" android:layout_toLeftOf="@+id/set2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:background="@drawable/header_oval"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/set2" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:background="@drawable/header_oval"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/set3" android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/set2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:background="@drawable/header_oval"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/set4" android:layout_alignParentBottom="true" android:layout_toRightOf="@+id/set3"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"

                android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="2dp"
                android:textColor="@color/gold"
                android:id="@+id/total" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="2dp"
                android:textColor="@color/gold"
                android:id="@+id/time" android:layout_below="@+id/total" android:layout_alignParentLeft="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="2dp"
                android:id="@+id/totalnumber" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/total"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="2dp"
                android:id="@+id/timenumber" android:layout_below="@+id/totalnumber" android:layout_toRightOf="@+id/time"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="2dp"
                android:textColor="@color/gold"
                android:id="@+id/cal" android:layout_below="@+id/time" android:layout_alignParentLeft="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_margin="2dp"
                android:id="@+id/calnumber" android:layout_below="@+id/timenumber" android:layout_toRightOf="@+id/cal"/>
</RelativeLayout>